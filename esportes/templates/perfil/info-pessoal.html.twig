{% extends 'base.html.twig' %}

{% block body %}
                
                <div class="tab-pane fade" id="profile-information" role="tabpanel">
                        <form class="account-setting-form">
                            <h3 style="color: aliceblue;">Informações Pessoais</h3>

                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Nome</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.name}}" id="nome" name="nome" type="text" class="form-control" placeholder="Digite seu nome completo">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.email}}" id="email" name="email" type="email" class="form-control email" placeholder="Digite seu email">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>CPF</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.cpf}}" id="cpf" name="cpf" type="number" class="form-control cpf" placeholder="Digite seu CPF">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Data de Nascimento</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.birthdate}}" id="data" name="data" type="text" class="form-control data" placeholder="dd/mm/aaaa">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Telefone Celular</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.telefone}}" id="telefone" name="telefone" type="number" class="form-control tel" placeholder="Digite seu telefone">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Gênero</label>
                                        <select style="background-color: black; border:none;" value="{{teste.user.genero}}" id="genero" name="genero" class="form-select genero">
                                            <option value="0">Selecione o gênero</option>
                                            <option {% if teste.user.genero == "M" %} selected {% endif %}value="M">Masculino</option>
                                            <option {% if teste.user.genero == "F" %} selected {% endif %}value="F">Feminino</option>
                                          </select>
                                    </div>
                                </div>
                                <h3 style="color: aliceblue; margin-top:20px;">Endereço</h3>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Estado</label>
                                        <select style="background-color: black; border:none;" value="{{teste.user.estado}}" id="estado" name="estado" class="form-select estado">
                                            <option value="0">Selecione o estado</option>
                                            <option {% if teste.user.estado == "SP" %} selected {% endif %}value="SP">SP</option>
                                            <option {% if teste.user.estado == "RJ" %} selected {% endif %}value="RJ">RJ</option>
                                            <option {% if teste.user.estado == "MG" %} selected {% endif %}value="MG">MG</option>
                                          </select>
                                    </div>
                                </div>
                                
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Cidade</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.cidade}}" id="cidade" name="cidade" type="text" class="form-control cidade" placeholder="Digite sua cidade">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Bairro</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.bairro}}" id="bairro" name="bairro" type="text" class="form-control bairro" placeholder="Digite seu bairro">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="form-group">
                                        <label>Rua</label>
                                        <input style="background-color: black; border:none;" value="{{teste.user.rua}}" id="rua" name="rua" type="text" class="form-control rua" placeholder="Digite sua rua">
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <button onclick="salvarDados()" class="default-btn">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>

{% endblock %}